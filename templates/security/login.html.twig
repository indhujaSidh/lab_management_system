{% extends 'main_web/web_base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('web_landing_page') }}
{% endblock %}
{% block body %}
    <main>
        <div class="container">
            <section
                    class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pb-2 text-center">
                                        <img src="{{ asset('web/logo.png') }}" class="login-logo" style="width: 70%"
                                             alt=""/>
                                        <h5 class="login-title mt-3">Welcome to AutomicLab !</h5>
                                        <p class="text-center small">Login to Your Account</p>
                                    </div>
                                    {% if error %}
                                        <div class="error-message text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    <form action="{{ path('app_login') }}" method="post" class="row g-3">
                                        <div class="col-12">
                                            <label for="username" class="form-label">Contact Number </label>
                                            <div class="input-group has-validation">
                                                <input type="text" id="username" class="form-control" name="_username"
                                                       value="{{ last_username }}" placeholder="077*******">
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label">Password</label>
                                            <input type="password" id="password" class="form-control" name="_password">
                                            {# If you want to control the URL the user is redirected to on success
                                            <input type="hidden" name="_target_path" value="/account"> #}
                                            <input type="hidden" name="_target_path" value="/admin/dashboard">
                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}">
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100 gradiant-btn" style="background-color: #3FBABF;border: #3FBABF" type="submit">Login
                                            </button>
                                        </div>
                                    </form>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main>


{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('web_landing_page') }}
{% endblock %}
