{% extends 'admin_dashboard/base/base_page.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('dashboard') }}
{% endblock %}
{% block page_content %}
    <div class="container-fluid">
        <section class="section">
            {% if is_granted('ROLE_VIEW_DASHBOARD_ADMIN_CONTENT') %}
                <div class="first-section">
                    {% include 'admin_dashboard/dashboard/first_section/dashboard_first_section.html.twig' %}
                </div>

                <div class="second-section">
                    {% include 'admin_dashboard/dashboard/second_section/second_section.html.twig' %}
                </div>
            {% endif %}

            {% if is_granted('ROLE_VIEW_DASHBOARD_PATIENT_CONTENT') %}
            <div class="row text-center pt-5">
                <div class="card-body text-center">
                    <div class="text-center">
                        <img src="{{ asset('web/bg-none-logo.png') }}" class="mt-4" style="align-items: center;width: fit-content">
                        <br>
                        <h3 class="mt-3" style="color: #3FBABF">WELCOME TO AUTOMICLAB</h3>
                    </div>
                </div>
            </div>
            {% endif %}

        </section>
    </div>
{% endblock page_content %}
{% block javascripts %}
    {{ encore_entry_script_tags('dashboard') }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
{% endblock %}
