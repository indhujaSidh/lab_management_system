{% extends 'admin_dashboard/base/base_page.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('test_results') }}
{% endblock %}
{% block page_content %}
    <div class="container-fluid">
        <section class="section">
            <div class="title-and-button">
                <span class="title">{{ appointmentRef }}</span>
                <input type="hidden" value="{{ appointmentId }}" id="test-appointment-id">
                &nbsp;&nbsp;&nbsp;&nbsp;
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success pt-1 pb-1 pr-2 pl-2 m-0" role="alert" data-mdb-color="success">
                        <i class="fas fa-check-circle me-3"></i>{{ message }}
                    </div>
                {% endfor %}
                <img id="file-icon" src="{{ asset('nice-admin/assets/img/fileIcon.png') }}" alt="Download" style="display: none;">
            </div>
            <div class="row mt-2 body-content">
                <div class="card">
                    <div class="card-body">
                        <div class="card-datatable table-responsive pt-0 m-2">
                            <table class="datatables-basic table table-hover border-bottom" id="table_test_results">
                                <thead>
                                <tr class="text text-al">
                                    <th class="col-md-8">Test Name</th>
                                    <th class="col-md-2">Ready To Collect On</th>
                                    <th class="col-md-2 text-center">Download File</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock page_content %}

{% block javascripts %}
    {{ encore_entry_script_tags('test_results') }}
    <script>
        let ajax_get_patient_test_result = "{{ path('ajax_get_test_results') }}"
        let download_patient_report_file = "{{ path('download_patient_report_file') }}"
    </script>
{% endblock %}
