{% extends 'admin_dashboard/base/base_page.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('test_form') }}
{% endblock %}
{% block page_content %}
    <div class="container-fluid">
        <section class="section">
            {% if isNew %}
                <span class="title mt-2">Add New Test Info</span>
            {% else %}
                <span class="title mt-2">Edit Test Info</span>
            {% endif %}
            <div class="row mt-2 body-content">
                <div class="card">
                    <div class="card-body">
                        <div class="shopForm">
                            {{ form_start(form) }}
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col col-md-6">
                                        <label for="name" class="form-label">Test Name</label><span><small
                                                    class="text-warning">*</small></span>
                                        {{ form_widget(form.name, {'attr':{'class':"form-control"}}) }}
                                        <div class="form-error">
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                    <div class="col col-md-6">
                                        <label for="code" class="form-label">Meta Code</label><span><small
                                                    class="text-warning">*</small></span>
                                        {{ form_widget(form.metaCode, {'attr':{'class':"form-control"}}) }}
                                        <div class="form-error">
                                            {{ form_errors(form.metaCode) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col col-md-6">
                                        <label for="code" class="form-label">Test Category</label>
                                        {{ form_widget(form.category, {'attr':{'class':"form-control"}}) }}
                                        <div class="form-error">
                                            {{ form_errors(form.category) }}
                                        </div>
                                    </div>
                                    <div class="col col-md-6">
                                        <div class="row">
                                            <div class="col col-md-6">
                                                <label for="isActive" class="form-label">Price</label><span><small
                                                            class="text-warning">*</small></span>
                                                {{ form_widget(form.price, {'attr':{'class':"form-control"}}) }}
                                                <div class="form-error">
                                                    {{ form_errors(form.price) }}
                                                </div>
                                            </div>

                                            <div class="col col-md-6">
                                                <label for="isActive" class="form-label">Processing Period</label><span><small
                                                            class="text-warning">*</small></span>
                                                {{ form_widget(form.processingPeriod, {'attr':{'class':"form-control"}}) }}
                                                <div class="form-error">
                                                    {{ form_errors(form.processingPeriod) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col col-md-12">
                                    <label for="code" class="form-label">Description</label><span><small
                                                class="text-warning">*</small></span>
                                    {{ form_widget(form.description, {'attr':{'class':"form-control"}}) }}
                                    <div class="form-error">
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>
                            <div class="wrap float-end mt-5">
                                {{ form_widget(form.submit, {'label': 'Save', 'attr':{'class':'btn btn-submit float-end'}}) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock page_content %}

{% block javascripts %}
    {{ encore_entry_script_tags('test_form') }}
{% endblock %}
