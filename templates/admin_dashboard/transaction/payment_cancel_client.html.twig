{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('payment_cancel') }}
{% endblock %}

{% block body %}
    <div id='card' class="animated fadeIn">
        <div id='upper-side-cancel'>
            <h3 id='status'>
                <i class="fa fa-times fa-2xl" style="color: #ffffff;"></i>
                <br><br>
                Payment Cancelled !
            </h3>
        </div>
        <div id='lower-side'>
            <p>Hi {{ transaction.appointmentId.patientId.firstName }},</p>
            <p>We Couldn't process your payment!</p>
            <a href="{{ path('my_appointments_list') }}" class="btn btn-sm" style="background: #F77D22 !important;border: #F77D22 !important;color: white">Back to Home</a>
        </div>
    </div>
{% endblock%}

{% block javascripts %}
    {{ encore_entry_script_tags('payment_cancel') }}
{% endblock %}
