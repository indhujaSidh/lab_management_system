{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('payment_success') }}
{% endblock %}

{% block body %}
    <div id='card' class="animated fadeIn">
        <div id='upper-side'>
            <h3 id='status'>
                <i class="fa-regular fa-circle-check fa-2xl" style="color: #ffffff;"></i>
                <br><br>
                Payment Received!
            </h3>
        </div>
        <div id='lower-side'>
            <p>Hi {{ transaction.appointmentId.patientId.firstName }},</p>
            <p>Your transaction was successful!</p>
            <br>
            <p>
                <strong> Appointment Ref No: {{ transaction.appointmentId.refNo }} </strong>
            </p>
            <p>We advise to keep this for future reference</p>
            <a href="{{ path('my_appointments_list') }}" class="btn btn-sm"
               style="background: #399019 !important;border: #399019 !important;color: white">Back to Home</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('payment_success') }}
{% endblock %}
